<div class="container">
<h1>Edit <%= @task.title %></h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title, class: "label" %>
  <%= f.text_field :title, class: "input-field" %>
  <%= f.label :details, class: "label" %>
  <%= f.text_field :details, class: "input-field" %>
  <%= f.label :completed, class: "label" %>
  <%= f.text_field :completed, class: "input-field" %>
  <%= f.submit class: "button" %>
<% end %>
</div>
